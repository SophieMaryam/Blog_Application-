doctype 
html
	head
		title Login 
		link(rel="stylesheet", href="./main.css", type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
	body
		header
			nav.white.black-text.center.spotlight Spotlight blog
				a(href="register/new").black-text.right Register
		.rows
			img#image(src="/images/backgroundimagetwo.png").col.s12.responsive-img
		.options
			if user
				a(href='/profile') View profile
				br
				a(href='/logout') Log out
			else
				form(name="form" method="post" action="/bloglogin" id="form") 
					h2 	Login
					br
					br
					label Email:
					input#username(type="email" name="email" placeholder="email")
					br
					label Password:
					input#password(type="password" name="password" placeholder="password" maxlength="50" minlength="8")
					br
					input(type="checkbox" name="checkbox") 
					br
					button(type="submit").btn.amber.lighten-2.waves-effect.waves-light.black-text Submit 
						i.material-icons.right send
					br
					br
					h5#message #{message}
			br
			br
			br
			br
			br
			br
			br
			br
		.rows
			img(src="/images/copy.png").col.s12
		br
		footer
			.white.black-text.center(id="footer") Connect with other people around the world
			br

		script(type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js")
		script(type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.100.1/js/materialize.min.js")
