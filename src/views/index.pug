doctype 
html
	head
		title Login 
		link(rel="stylesheet", href="./main.css", type="text/css")
		link(href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet")
		link(href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet")
		link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.99.0/css/materialize.min.css")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
	body
		header
			nav.white.black-text.center(id="spotlight") Spotlight blog
				a(href="register/new").brand-logo.black-text.right Register
		.rows
			img#image(src="/images/backgroundimagetwo.png").col.s12.responsive-img
		.options
			if user
				a(href='/profile/' + user.id) View profile
				br
				a(href='/logout') Log out
			else
				form(name="form" method="post" action="/bloglogin" id="form") 
					h2 	Login
					br
					br
					label Email:
					input#username(type="text" name="email" placeholder="email")
					br
					label Password:
					input#password(type="password" name="password" placeholder="password")
					br
					input(type="checkbox" name="checkbox") 
					br
					button(type="submit").btn.amber.lighten-2.waves-effect.waves-light.black-text Submit 
						i.material-icons.right send
					br
					br
					h5#message #{message}
			br
			br
			br
			br
			br
			br
			br
			.rows
				img(src="/images/backgroundimage.png").col.s12
		footer
			nav.white.black-text.center.upper(id="footer") Connect with other artists around the world

		script(type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js")
		script(type="text/javascript" src="js/materialize.min.js")
